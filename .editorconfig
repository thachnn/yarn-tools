# https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{md,txt}]
trim_trailing_whitespace = false
max_line_length = off

[*.{js,ts,yml}]
quote_type = single
spaces_within_object_literal_braces = true
